@model Pc3.DTO.PostDTO

@{
    ViewData["Title"] = "Editar Post";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Home" asp-action="EditPost" method="post">
    <input type="hidden" asp-for="id" />

    <div class="form-group">
        <label asp-for="userId">ID del Usuario</label>
        <input type="number" class="form-control" asp-for="userId" required />
    </div>
    <div class="form-group">
        <label asp-for="title">Título</label>
        <input type="text" class="form-control" asp-for="title" required />
    </div>
    <div class="form-group">
        <label asp-for="Body">Cuerpo</label>
        <textarea class="form-control" asp-for="Body" rows="5" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>